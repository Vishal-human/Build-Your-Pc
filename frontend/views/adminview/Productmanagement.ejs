        async function toggleProductStatus(productId) {
            try {
                const response = await fetch(`/api/productmanagement/${productId}/toggle`, { method: 'PUT' });
                const data = await response.json();

                if (data.success) {
                    const button = document.getElementById(`toggle-btn-${productId}`);
                    button.innerText = data.isActive ? "Deactivate" : "Activate";
                } else {
                    alert("Failed to update product status.");
                }
            } catch (error) {
                console.error("Error toggling product status:", error);
            }
        }


        //delete the product
        function deleteProduct(productId) {
            fetch(`/api/productmanagement/${productId}`, {
                method: "DELETE",
                headers: { "Content-Type": "application/json" }
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(`Product deleted from ${data.category} collection`);
                        location.reload(); // Refresh the page
                    } else {
                        alert("Failed to delete product: " + data.message);
                    }
                })
                .catch(error => console.error("Error deleting product:", error));
        }



