            <!-- Customers Section -->
            <section id="customers" class="mb-8">
                <div class="bg-slate-800 rounded-lg p-6">
                    <h2 class="text-2xl font-bold text-white mb-4">Customer Management</h2>
                    <div class="overflow-x-auto">
                        <table class="min-w-full text-white">
                            <thead>
                                <tr class="border-b border-slate-700">
                                    <th class="px-4 py-2 text-left">Name</th>
                                    <th class="px-4 py-2 text-left">Email</th>
                                    <th class="px-4 py-2 text-left">Status</th>
                                    <th class="px-4 py-2 text-left">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Sample row -->
                                <tr class="border-b border-slate-700">
                                    <td class="px-4 py-2">John Doe</td>
                                    <td class="px-4 py-2">john@example.com</td>
                                    <td class="px-4 py-2">Active</td>
                                    <td class="px-4 py-2">
                                        <button class="text-blue-400 hover:text-blue-300 mr-2">View</button>
                                        <button class="text-red-400 hover:text-red-300">Deactivate</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>

            <!-- Orders Section -->
            <section id="orders">
                <div class="bg-slate-800 rounded-lg p-6">
                    <h2 class="text-2xl font-bold text-white mb-4">Order Management</h2>
                    <div class="overflow-x-auto">
                        <table class="min-w-full text-white">
                            <thead>
                                <tr class="border-b border-slate-700">
                                    <th class="px-4 py-2 text-left">Order ID</th>
                                    <th class="px-4 py-2 text-left">Customer</th>
                                    <th class="px-4 py-2 text-left">Date</th>
                                    <th class="px-4 py-2 text-left">Status</th>
                                    <th class="px-4 py-2 text-left">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Sample row -->
                                <tr class="border-b border-slate-700">
                                    <td class="px-4 py-2">#12345</td>
                                    <td class="px-4 py-2">John Doe</td>
                                    <td class="px-4 py-2">2024-01-20</td>
                                    <td class="px-4 py-2">Shipped</td>
                                    <td class="px-4 py-2">
                                        <button class="text-blue-400 hover:text-blue-300 mr-2">View Details</button>
