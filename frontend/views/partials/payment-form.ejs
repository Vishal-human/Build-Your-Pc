<!-- Payment Form Partial -->
<div class="bg-gray-800/90 backdrop-blur-sm rounded-lg shadow-xl overflow-hidden border border-blue-500/20 h-full">
    <div class="px-6 py-8">
        <h2 class="text-2xl font-bold text-blue-400 mb-8">Payment Details</h2>
        
        <div class="space-y-6">
            <div class="space-y-4">
                <div class="flex items-center space-x-3">
                    <input type="radio" id="card" name="payment[paymentMethod]" value="card" checked
                        class="h-4 w-4 text-blue-500 focus:ring-blue-400">
                    <label for="card" class="text-blue-300">Credit/Debit Card</label>
                </div>
                <div class="flex items-center space-x-3">
                    <input type="radio" id="upi" name="payment[paymentMethod]" value="upi"
                        class="h-4 w-4 text-blue-500 focus:ring-blue-400">
                    <label for="upi" class="text-blue-300">UPI</label>
                </div>
            </div>

            <!-- Card Payment Fields -->
            <div id="cardFields" class="pt-4 border-t border-gray-700">
                <div>
                    <label for="cardNumber" class="block text-sm font-medium text-blue-300">Card Number</label>
                    <input type="text" id="cardNumber" name="payment[cardNumber]" placeholder="1234 5678 9012 3456"
                        class="mt-1 block w-full rounded-md bg-gray-700/90 border-gray-600 text-white shadow-sm 
                        focus:border-blue-500 focus:ring-blue-500 placeholder-gray-400">
                </div>

                <div class="grid grid-cols-2 gap-4 mt-4">
                    <div>
                        <label for="expiry" class="block text-sm font-medium text-blue-300">Expiry Date</label>
                        <input type="text" id="expiry" name="payment[expiry]" placeholder="MM/YY"
                            class="mt-1 block w-full rounded-md bg-gray-700/90 border-gray-600 text-white shadow-sm 
                            focus:border-blue-500 focus:ring-blue-500 placeholder-gray-400">
                    </div>
                    <div>
                        <label for="cvv" class="block text-sm font-medium text-blue-300">CVV</label>
                        <input type="text" id="cvv" name="payment[cvv]" placeholder="123"
                            class="mt-1 block w-full rounded-md bg-gray-700/90 border-gray-600 text-white shadow-sm 
                            focus:border-blue-500 focus:ring-blue-500 placeholder-gray-400">
                    </div>
                </div>
            </div>

            <!-- UPI Payment Fields -->
            <div id="upiFields" class="hidden pt-4 border-t border-gray-700">
                <div>
                    <label for="upiId" class="block text-sm font-medium text-blue-300">UPI ID</label>
                    <input type="text" id="upiId" name="payment[upiId]" placeholder="example@upi"
                        class="mt-1 block w-full rounded-md bg-gray-700/90 border-gray-600 text-white shadow-sm 
                        focus:border-blue-500 focus:ring-blue-500 placeholder-gray-400">
                </div>
            </div>

            <!-- Shipment Charge and Subtotal Section -->
            <div class="pt-6 border-t border-gray-700">
                <div class="flex justify-between">
                    <label for="shipmentCharge" class="block text-sm font-medium text-blue-300">Shipment Charge</label>
                    <span class="text-blue-300">₹ 50</span> <!-- Static value for Shipment Charge -->
                </div>
                <div class="flex justify-between mt-4">
                    <label for="subtotal" class="block text-sm font-medium text-blue-300">Subtotal</label>
                    <span class="text-blue-300">₹ 200</span> <!-- Static value for Subtotal -->
                </div>
                <div class="flex justify-between mt-4">
                    <label for="total" class="block text-sm font-medium text-blue-300">Total</label>
                    <span class="text-blue-300">₹ 250</span> <!-- Static value for Total -->
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Handle payment method selection
    const paymentMethods = document.querySelectorAll('input[name="payment[paymentMethod]"]');
    const cardFields = document.getElementById('cardFields');
    const upiFields = document.getElementById('upiFields');

    // Initialize visibility based on the default selected payment method (card by default)
    if (document.querySelector('input[name="payment[paymentMethod]"]:checked').value === 'card') {
        cardFields.classList.remove('hidden');
        upiFields.classList.add('hidden');
    } else {
        cardFields.classList.add('hidden');
        upiFields.classList.remove('hidden');
    }

    // Add event listener for toggling between payment methods
    paymentMethods.forEach(method => {
        method.addEventListener('change', (e) => {
            if (e.target.value === 'card') {
                cardFields.classList.remove('hidden');
                upiFields.classList.add('hidden');
            } else if (e.target.value === 'upi') {
                cardFields.classList.add('hidden');
                upiFields.classList.remove('hidden');
            }
        });
    });
</script>
