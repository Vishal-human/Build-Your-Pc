<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Orders</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-900 text-white">
    <%- include('../partials/navbar.ejs') %>


        <div class="container mx-auto p-6">
            <h2 class="text-3xl font-bold text-center text-blue-400 mb-8">Your Orders</h2>

            <!-- Orders List -->
            <div id="orders-list" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"></div>

            <!-- Empty Orders Message -->
            <p id="no-orders" class="text-center text-gray-400 hidden">No orders found.</p>
        </div>
        <%- include('../partials/footer.ejs') %>

            <script>
                document.addEventListener("DOMContentLoaded", async () => {
                    const ordersList = document.getElementById("orders-list");
                    const noOrdersMessage = document.getElementById("no-orders");

                    try {
                        const response = await fetch("/api/orders");
                        if (!response.ok) throw new Error("Failed to fetch orders");

                        const orders = await response.json();

                        if (orders.length === 0) {
                            noOrdersMessage.classList.remove("hidden");
                            return;
                        }

                        orders.forEach(order => {
                            const orderElement = document.createElement("div");
                            orderElement.className = "bg-gray-800 p-5 rounded-lg shadow-lg border border-blue-500/30";

                            const productsList = order.products.map(p => `
                        <li class="flex justify-between">
                            <span class="text-blue-300">${p.id}</span> 
                            <span class="font-bold">₹${p.price}</span>
                        </li>
                    `).join("");

                            orderElement.innerHTML = `
                        <h3 class="text-lg font-bold text-blue-400">Order ID: ${order._id}</h3>
                        <ul class="mt-3 space-y-2 text-gray-300">${productsList}</ul>
                        <div class="mt-4 border-t border-gray-700 pt-3">
                            <p class="text-sm">Total: <span class="font-bold text-green-400">₹${order.totalAmount}</span></p>
                            <p class="text-sm">Status: <span class="font-bold text-yellow-400">${order.status}</span></p>
                            <p class="text-xs text-gray-400">Ordered on: ${new Date(order.createdAt).toLocaleString()}</p>
                        </div>
                    `;

                            ordersList.appendChild(orderElement);
                        });
                    } catch (error) {
                        console.error("Error fetching orders:", error);
                        noOrdersMessage.textContent = "Failed to load orders. Try again later.";
                        noOrdersMessage.classList.remove("hidden");
                    }
                });
            </script>

</body>

</html>